---
interface Props {
    roomId: string;
    title?: string;
}

const { roomId, title = "How to Play" } = Astro.props;
const leaderboardUrl = `${Astro.url.origin}/leaderboard/${roomId}`;
---

<div class="mt-8 p-6 bg-purple-50 rounded-lg">
    <h3 class="text-xl font-semibold mb-4">{title}</h3>
    <ul class="list-disc list-inside space-y-2 text-gray-700">
        <li>Wait for the host to start each question</li>
        <li>Answer as quickly as possible for more points</li>
        <li>Build a streak by answering correctly multiple times in a row</li>
        <li
            set:html={`Watch your position on the <a href="${leaderboardUrl}" target="_blank">leaderboard</a>!`}
        />
    </ul>
</div>

<style>
    a {
        text-decoration: underline;
        text-decoration-style: dashed;
        text-underline-offset: 2px;
    }

    a:hover {
        text-decoration-style: solid;
    }
</style>
