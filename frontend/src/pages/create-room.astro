---
/**
 * Create Room Page
 *
 * This page calls the backend API to create a real quiz room,
 * then redirects to the host page with the real room ID.
 */

import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const BACKEND_API =
    import.meta.env.PUBLIC_BACKEND_API || "http://localhost:8000";

// Fetch the quizId from URL
const quizId = Astro.url.searchParams.get("quiz");
if (!quizId) {
    return Astro.redirect("/?error=no-quiz");
}

// Fetch the questions for the chosen quiz
const questions = await getCollection("quiz", ({ id }) =>
    id.startsWith(`${quizId}/`),
);
const totalQuestions = questions.length;
---

<Layout title="Creating Room...">
    <div
        class="container mx-auto px-4 py-8"
        id="create-room-container"
        data-quiz-id={quizId}
        data-total-questions={totalQuestions}
    >
        <div class="max-w-md mx-auto">
            <!-- Loading State -->
            <div id="loading" class="text-center">
                <div class="text-6xl mb-4 animate-bounce">⏳</div>
                <h1 class="text-3xl font-bold mb-4">Creating Quiz Room...</h1>
                <p class="text-gray-600">Setting up your quiz session</p>
                <div class="mt-4 flex justify-center">
                    <div
                        class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"
                    >
                    </div>
                </div>
            </div>

            <!-- Error State -->
            <div id="error" class="hidden">
                <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
                    <div class="text-4xl mb-4 text-center">❌</div>
                    <h2 class="text-xl font-bold text-red-800 mb-2">
                        Connection Error
                    </h2>
                    <p class="text-red-700 mb-4" id="error-message"></p>

                    <div
                        class="space-y-3 text-sm text-red-600 bg-red-100 p-4 rounded"
                    >
                        <p><strong>⚠️ Backend is not running!</strong></p>
                        <p>Open a terminal and run:</p>
                        <pre
                            class="bg-red-200 p-2 rounded text-xs overflow-x-auto">cd backend
uv run uvicorn main:app --reload</pre>
                        <p class="text-xs">Backend should be accessible at:</p>
                        <code class="bg-red-200 px-2 py-1 rounded text-xs"
                            >{BACKEND_API}</code
                        >
                    </div>

                    <button
                        onclick="location.reload()"
                        class="mt-4 w-full py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition"
                    >
                        Try Again
                    </button>
                    <a
                        href="/"
                        class="block mt-2 text-center text-red-600 hover:underline"
                    >
                        ← Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script>
    import { createRoom, showError } from "../lib/room-creation";

    // Get data from data-attributes
    const container = document.getElementById("create-room-container");
    const quizId = container?.dataset.quizId;
    const totalQuestions = container?.dataset.totalQuestions;

    if (quizId && totalQuestions) {
        // Create room when page loads
        createRoom({
            quizId,
            totalQuestions: parseInt(totalQuestions, 10),
            onError: (error) => showError(error.message),
        });
    } else {
        showError("Missing quiz configuration");
    }
</script>
