---
/**
 * Standalone Leaderboard Page
 *
 * Room-based routing: /leaderboard/{roomId}
 * Full-width leaderboard display for hosts to open in a separate tab
 */

import Layout from "../../layouts/Layout.astro";
import Leaderboard from "../../components/Leaderboard.astro";

// Get the room ID from the URL
const { roomId } = Astro.params;

if (!roomId) {
    return Astro.redirect("/");
}
---

<Layout title={`Leaderboard - Room ${roomId}`}>
    <div class="bg-gray-100 min-h-screen">
        <div class="container mx-auto px-4 py-8 max-w-2xl">
            <!-- Header -->
            <header class="mb-8">
                <div class="flex justify-between items-center">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800">
                            🏆 Leaderboard
                        </h1>
                        <p class="text-gray-600">Room: {roomId}</p>
                    </div>
                    <button
                        onclick="window.close()"
                        class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition"
                    >
                        Close
                    </button>
                </div>
            </header>

            <!-- Full-width Leaderboard -->
            <Leaderboard roomId={roomId} />

            <!-- Auto-refresh indicator -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500">
                    🔄 Updates automatically in real-time
                </p>
            </div>
        </div>
    </div>
</Layout>
